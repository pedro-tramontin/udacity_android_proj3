<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for the view separator, that is used between questions -->
    <style name="ViewSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/view_separator_size</item>
        <item name="android:background">@color/view_separator</item>
        <item name="android:layout_marginTop">@dimen/view_separator_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/view_separator_margin_bottom</item>
    </style>

    <!-- Style for the question header -->
    <style name="QuestionHeader" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Used in the question text -->
    <style name="QuestionText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/question_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/question_margin_bottom</item>
    </style>

    <!-- Used in the questions' options -->
    <style name="QuestionOption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/question_option_margin_top</item>
    </style>

    <!-- Used in the EditText of the questions -->
    <style name="QuestionTextField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/free_text_hint</item>
    </style>

</resources>
